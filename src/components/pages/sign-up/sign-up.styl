.root
  height 100%
  background-color #f2f5f7

.logo
  margin 28px
  display inline-block

.signinButton
  font-size 14px
  color: $colors.black
  margin-top 35px
  margin-right 55px
  float right
  &:hover
    color: $colors.primary

.content
  margin-top 100px
  text-align center

.formContainer
  margin 0 auto
  max-width 350px
  text-align center
  user-select none

.bigTitle
  font-size 48px
  font-weight bold
  color: $colors.black
  margin-bottom 12px

.smallTitle
  font-size 24px
  color: $colors.black
  margin-bottom 40px

.formInput
  display inline-block
  width 100%

.inputHint
  color #d8d8d8
  font-size 12px
  margin-top 4px
  margin-bottom 16px
  text-align left

.iconHint
  color #d8d8d8
  margin-right 10px
  margin-top -2px
  vertical-align middle

.signupButton
  display inline-block
  width 100%
  text-align center
  vertical-align middle
  line-height 48px
  height 48px
  font-size 20px
  margin-bottom 16px

